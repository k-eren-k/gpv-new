<div class="gists-list" id="gists">
    <ul>
        <% gists.forEach(gists => { %>
            <li>
                <div class="gists-header">
                    <h3><%= gists.filename %></h3>
          <a target="_blank" href="<%- gists.url %>"><i class="fa-light fa-browser"></i></a>
                </div>

                <div class="gists-desc">
                    <span><%- gists.description %></span>
                </div>

                <div class="gists-info">
                    <div>
                        <div class="ri lr">
                            <span>Created at: <%= gists.created_at  %></span>
                        </div>
                        <div class="ri lr">
                            <span>Last update: <%= gists.updated_at  %></span>
                        </div>
                    </div>
                </div>
            </li>
        <% }); %>
    </ul>
</div>