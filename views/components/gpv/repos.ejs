<div class="repos-list" id="repos">
    <ul>
        <% repos.forEach(repo => { %>
            <li>
                <div class="repo-header">
                    <h3><%- repo.name %></h3>
                    <i class="fa-light fa-book"></i>
                    <a target="_blank" href="<%- repo.html_url %>"><i class="fa-light fa-browser"></i></a>
                    <span>
                        <i class="fa-light fa-star"></i>
                        <span><%- repo.stargazers_count %></span>
                    </span>
                </div>

                <div class="repo-desc">
                    <span><%- repo.description %></span>
                </div>

                <div class="repo-info">
                    <div>
                        <div class="ri">
                            <i class="fa-light fa-scale-balanced"></i><span><%= repo.license ? repo.license : "Not Specified" %></span>
                        </div>
                        <div class="ri">
                            <i class="fa-light fa-code-fork"></i><span><%= repo.language ? repo.language : "Not Specified" %></span>
                        </div>
                        <div class="ri lr">
                            <span>Created at: <%= repo.created_at  %></span>
                        </div>
                        <div class="ri lr">
                            <span>Last update: <%= repo.updated_at  %></span>
                        </div>
                    </div>
                </div>
            </li>
        <% }); %>
    </ul>
</div>